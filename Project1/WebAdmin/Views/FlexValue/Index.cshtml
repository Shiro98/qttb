@{
    //ViewBag.Title = "Nhóm quyền";
}
<div class="row" ng-controller="RoleController">

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh mục động</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-primary" ng-show="RoleBtnCreate == true" ng-click="add()">
                        <i class="fas fa-plus"></i> Thêm mới
                    </button>
                    <button type="button" class="btn btn-primary" ng-show="RoleBtnSearch == true" ng-click="Refesh()">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label>Danh mục</label>
                        <select class="form-control" ng-model="modelSearch.FLEX_VALUE_SET_ID" ui-select2 name="FLEX_VALUE_SET_ID" ng-options="item.FLEX_VALUE_SET_ID as item.FLEX_VALUE_SET_NAME for item in ListFlexValueSet">
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Từ khoá</label>
                        <input class="form-control" type="text" ng-model="modelSearch.KeyWord" />
                    </div>
                </div>
                <div class="col-lg-2">
                    <button type="button" class="btn btn-primary" ng-show="RoleBtnSearch == true" ng-click="LoadPage()">
                        <i class="fa fa-search"></i> Tìm kiếm
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:10px;">STT </th>
                            <th style="width:100px;" ng-repeat="item in ListColumn" class="sort sorting" ng-click="Sort($event, item.FLEX_COLUMN_NAME)">{{item.END_USER_COLUMN_NAME}} </th>
                            <th style="width:70px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in ListData"  ng-class="{activerow:$index==selectedRow}">
                            <td class="text-center">{{$index + 1}}</td>
                            <td style="width:100px;" ng-repeat="itemColumn in ListColumn">{{GetValue(itemColumn.FLEX_COLUMN_NAME, item)}} </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-primary" ng-click="ViewDetail(item.FLEX_VALUE_ID, $index)" ng-show="RoleBtnView == true" title="Xem">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-primary" ng-click="edit(item.FLEX_VALUE_ID)" ng-show="RoleBtnUpdate == true" title="Cập nhật">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-danger" ng-click="delete(item.FLEX_VALUE_ID, item.DESCRIPTION)" ng-show="RoleBtnDelete == true" title="Xóa">
                                    <i class="fas fa-times"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <ul class="pagination pagination-sm m-0 float-right" uib-pagination total-items="modelSearch.totalItems" items-per-page="modelSearch.pageSize" ng-model="modelSearch.currentPage" ng-change="pageChanged()" max-size="modelSearch.maxSize" class="pagination-sm" boundary-links="true" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts{
    <script src="~/app/Controller/RoleController.js"></script>
    <script src="~/Content/js/jquery.ztree.core.js"></script>
    <script src="~/Content/js/jquery.ztree.excheck.js"></script>
}
