<div class="modal-header">
    <h4 class="modal-title">Cập nhật nhóm quyền</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="cancel()">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <form class=" col-md-12" id="formSubmit">
        <div class="row">
            <div class="col-lg-12">
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="requiredInput">Mã</label>
                            <input type="text" class="form-control" ng-model="model.ROLE_TYPE" name="ROLE_TYPE" required>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label class="requiredInput">Phạm vi</label>
                            <select class="form-control" ng-model="model.SCOPE" ui-select2 name="SCOPE" required ng-options="item.ID as item.Name for item in ListSCOPE">
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="requiredInput">Đơn vị</label>
                                <select class="form-control" ng-model="model.UNIT_ID" ui-select2 name="UNIT_ID" ng-options="item.UNIT_ID as item.UNIT_NAME for item in ListUnit">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-lg-8">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="requiredInput">Phòng ban</label>
                                <select class="form-control" ng-model="model.APP_CODE" ui-select2 name="APP_CODE" ng-options="item.APP_CODE as item.DESCRIPTION for item in ListAppCode">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>DOMAIN_CODE</label>
                            <input type="text" class="form-control" ng-model="model.DOMAIN_CODE" name="DOMAIN_CODE">
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Mô tả</label>
                            <textarea class="form-control" ng-model="model.ROLE_DESC" name="ROLE_DESC"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-lg-12">
                        <fieldset class="scheduler-border">
                            <legend class="scheduler-border" style="margin-bottom:0px;">Chức năng nhóm quyền</legend>
                            <div style="height:250px; overflow: auto;">
                                <div class="ztreeRoleBackground left" style="overflow-x:hidden;overflow-y:auto ;height: 100%;">
                                    <ul id="treeRole" class="ztree"></ul>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-click="submit()">Lưu</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="cancel()">Hủy</button>
</div>

