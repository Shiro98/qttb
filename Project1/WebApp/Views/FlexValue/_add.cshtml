<style type="text/css">
    .requiredInput:after {
        content: "*";
        color: red;
    }

    .inputCheckBox {
        margin-left: -48%;
    }
</style>
<div class="modal-header">
    <h4 class="modal-title">{{FlexValueSetName}}</h4>
    <a href="#" data-action="close" data-dismiss="modal" aria-label="Close" ng-click="cancel()">
        <i class="ace-icon fa fa-times"></i>
    </a>
</div>
<div class="modal-body">
    <div class="row" style="margin-left: 10px; margin-right: 10px;">
        <div class="col-lg-12">
            <form class="form-horizontal" role="form" id="formSubmit">
                <div class="form-group" ng-repeat="item in ListColumn" ng-if="item.DISPLAY_FLAG == 'Y' && item.FLEX_COLUMN_NAME != 'FLEX_VALUE_SET_ID'">
                    <label ng-class="{'requiredInput':item.REQUIRED_FLAG == 'Y'}">{{item.END_USER_COLUMN_NAME}}</label>
                    <input class="form-control inputCheckBox" ng-if="item.CONTROL_NAME == 'input' && item.CONTROL_TYPE =='checkbox'" ng-checked="((model[item.FLEX_COLUMN_NAME] == 'Y' && item.FLEX_COL_DATA_TYPE =='char') || model[item.FLEX_COLUMN_NAME] == true)" type="{{item.CONTROL_TYPE}}" ng-model="model[item.FLEX_COLUMN_NAME]" />
                    <input class="form-control" ng-if="item.CONTROL_NAME == 'input' && item.CONTROL_TYPE !='checkbox'" ng-checked="model[item.FLEX_COLUMN_NAME] == 'Y'" type="{{item.CONTROL_TYPE}}" ng-model="model[item.FLEX_COLUMN_NAME]" />
                    <select class="form-control" ng-if="item.CONTROL_NAME == 'select'" ng-model="model[item.FLEX_COLUMN_NAME]" ng-options="option.Value as option.Name for option in item.Options"></select>
                    <textarea class="form-control" rows="2" ng-if="item.CONTROL_NAME == 'textarea'" ng-model="model[item.FLEX_COLUMN_NAME]"></textarea>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-click="submit()">Lưu</button>
    <button type="button" class="btn btn-warning" data-dismiss="modal" ng-click="cancel()">Hủy</button>
</div>

