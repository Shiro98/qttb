@{
    //ViewBag.Title = "Danh mục Nhóm/Loại";
}
<div class="row" ng-controller="FlexValueCategoryController">

    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh mục Nhóm/Loại</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-primary" ng-show="RoleBtnCreate == true" ng-click="add()">
                        <i class="fas fa-plus"></i> Thêm mới
                    </button>
                    <button type="button" class="btn btn-primary" ng-show="RoleBtnSearch == true" ng-click="Refesh()">
                        <i class="fas fa-sync-alt"></i> Làm mới
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:10px;">STT </th>
                            <th style="width:100px;" ng-repeat="item in ListColumn" class="sort sorting" ng-click="Sort($event, item.FLEX_COLUMN_NAME)">{{item.END_USER_COLUMN_NAME}} </th>
                            <th style="width:70px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in ListData" ng-class="{activerow:$index==selectedRow}">
                            <td class="text-center">{{$index + 1}}</td>
                            <td style="width:100px;" ng-repeat="itemColumn in ListColumn">{{GetValue(itemColumn.FLEX_COLUMN_NAME, item)}} </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-primary" ng-click="ViewDetail(item.FLEX_VALUE_CATEGORY_ID, $index)" ng-show="RoleBtnView == true" title="Xem">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-primary" ng-click="edit(item.FLEX_VALUE_CATEGORY_ID)" ng-show="RoleBtnUpdate == true" title="Cập nhật">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-danger" ng-click="delete(item.FLEX_VALUE_CATEGORY_ID, item.DESCRIPTION)" ng-show="RoleBtnDelete == true" title="Xóa">
                                    <i class="fas fa-times"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <ul class="pagination pagination-sm m-0 float-right" uib-pagination total-items="modelSearch.totalItems" items-per-page="modelSearch.pageSize" ng-model="modelSearch.currentPage" ng-change="pageChanged()" max-size="modelSearch.maxSize" class="pagination-sm" boundary-links="true" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

@section Scripts{
    <script src="~/app/Controller/FlexValueCategoryController.js"></script>
    <script src="~/Content/js/jquery.ztree.core.js"></script>
    <script src="~/Content/js/jquery.ztree.excheck.js"></script>
}
